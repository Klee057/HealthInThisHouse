<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bmi.BmiResults"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contentLayout"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/BMIImage1"
            android:src="@drawable/bmi_nutdef"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:visibility="gone"></ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/BMIImage2"
            android:src="@drawable/bmi_lowrisk"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:visibility="gone"></ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/BMIImage3"
            android:src="@drawable/bmi_moderaterisk"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:visibility="gone"></ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/BMIImage4"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:src="@drawable/bmi_highrisk"
            android:visibility="gone"></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:id="@+id/contentLayout"
        android:background="@drawable/bmi_height_background"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XX"
                android:id="@+id/BMIResult"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_marginBottom="20dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your BMI Category is"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BMICat"
                android:text="xxxx"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    </RelativeLayout>


    <android.widget.Button
        android:id="@+id/RecalBmiButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bmi_height_background"
        android:text="Recalculate BMI"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="0.25"
        android:textAlignment="center"
        android:layout_gravity="center"></android.widget.Button>

</LinearLayout>